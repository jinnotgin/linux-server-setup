version: "3.9"
services:
  caddy:
    image: caddy:latest
    restart: unless-stopped
    container_name: caddy-proxy
    ports:
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - ./certs:/certs:ro
      - ./sites:/var/www/html
    networks:
      - proxy_net
    command: ["caddy", "run", "--config", "/etc/caddy/Caddyfile", "--adapter", "caddyfile"]

networks:
  proxy_net:
    external: true
