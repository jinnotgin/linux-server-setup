version: "3.9"
services:
  gateway:
    image: nginx:stable-alpine
    container_name: gateway-router
    restart: unless-stopped
    ports:
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./www:/usr/share/nginx/html:ro
    networks:
      - proxy_net

networks:
  proxy_net:
    external: true
