version: "3.9"
services:
  vless-cdn:
    image: teddysun/xray:latest
    container_name: vless-cdn
    restart: unless-stopped
    user: "{{DOCKER_USER}}"
    volumes:
      - {{VLESS_CDN_CONFIG_PATH}}:/etc/xray/config.json:ro
    networks:
      - proxy_net
    command: ["xray", "run", "-config", "/etc/xray/config.json"]

networks:
  proxy_net:
    external: true
